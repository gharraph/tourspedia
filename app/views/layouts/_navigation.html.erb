<%= link_to(image_tag("/assets/solaris_logo.png", :alt => "home image", :width => 100, :height => 100, :title => "Click here to return to Home"), root_path, :class => 'brand')%>

<ul class="nav">
  <% if user_signed_in? %>
    <li>
    <%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %>
    </li>
  <% else %>
    <li>
    <%= link_to 'Login', new_user_session_path %>
    </li>
  <% end %>
  <% if user_signed_in? %>
    <li>
    <%= link_to 'Edit account', edit_user_registration_path %>
    </li>
    <% if current_user.has_role? :admin %>
      <li>
      <%= link_to 'Admin', users_path %>
      </li>
    <% end %>
  <% else %>
    <li>
    <%= link_to 'Sign up', new_user_registration_path %>
    </li>
  <% end %>
  </ul>
<% if user_signed_in? %>
  <font class="pull-right" color="FB9932">
  Logged-in as: <%= current_user.name %>
  </font>
<% end %>
